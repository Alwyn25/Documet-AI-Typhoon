# --- Microservice Endpoints ---
# The host and port for each of the gRPC microservices.
# The main FastAPI application uses these to connect to the services.
MAPPER_SERVICE_HOST=localhost
MAPPER_SERVICE_PORT=50051
AGENT_SERVICE_HOST=localhost
AGENT_SERVICE_PORT=50052
DATASTORE_SERVICE_HOST=localhost
DATASTORE_SERVICE_PORT=50053

# --- FastAPI Application Server ---
# The host and port for the main uvicorn server.
APP_HOST=0.0.0.0
APP_PORT=8080

# --- Database Connection Strings ---
# These are used by the DataStore microservice.
# In the current implementation, these are placeholders as the datastore is in-memory.
POSTGRES_DB_URL="postgresql://user:password@hostname:5432/invoicedb"
MONGO_DB_URL="mongodb://user:password@hostname:27017/vendordocs"

# --- Third-Party Integration Credentials ---
# These are placeholders for future integration with accounting systems.
TALLYPRIME_API_KEY="your_tally_api_key_here"
ZOHO_BOOKS_CLIENT_ID="your_zoho_client_id_here"
ZOHO_BOOKS_CLIENT_SECRET="your_zoho_client_secret_here"
